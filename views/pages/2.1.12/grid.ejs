<script>
	(function(root) {
		var cpGridBuildColumns = function() {
			var container = $('#cpGridColumns');
			var gridColumns = $('#cpGridColumns').css('content');

			if (gridColumns) {
				gridColumns = gridColumns.replace(/"/g, "");
			}

			if (gridColumns !== 'normal') {
				$('#cpGridColumns').find('.cp-example-col').remove();

				for (var i = 1; i <= gridColumns; i++) {
					container.append('<div class="col-1 cp-example-col"><div class="cp-example-col-content">' + i + '</div></div>');
				}
			}
		};

		cpGridBuildColumns();

		root.cpGridBuildColumns = cpGridBuildColumns;
	}(this));

	$(document).on('cp-compile-done', function(event) {
		cpGridBuildColumns();
	});
</script>